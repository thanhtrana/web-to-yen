@model IEnumerable<OrderItem>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0") đ</td>
                <td>@((item.Quantity * item.UnitPrice).ToString("N0")) đ</td>

            </tr>
        }
    </tbody>
</table>
