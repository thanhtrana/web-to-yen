@model AppUser

@{
    ViewData["title"] = "Tao Tai Khoan";
}




<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Tên</label>
        <input asp-for="UserName" required class="form-control" />
        <span asp-validation-for="UserName" class="text-danger" />
    </div>


    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" required class="form-control" />
        <span asp-validation-for="Email" class="text-danger" />
    </div>


    <div class="form-group">
        <label>Số Điện Thoại</label>
        <input asp-for="PhoneNumber" required class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Mật Khẩu</label>
        <input asp-for="PasswordHash" required class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger" />
    </div>


    <div class="form-group">
        <label>Roles</label>
        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            <option value="">-- Chọn quyền --</option>
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-primary">Tạo mới</button>
</form>

<h3><a asp-action="Index" asp-controller="User">Back To List User</a></h3>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

}
