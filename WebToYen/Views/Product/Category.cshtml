@model IEnumerable<WebToYen.Models.Product>
@* San pham *@

<!-- start banner section -->
<section id="banner">
    <div class="container">
        <div class="row">
            <div id="myCarousel"
                 class="carousel slide mb-6"
                 data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a class="d-block w-100" href="#">
                            <picture class="full-image">
                                <img class="dt-width-100 ls-is-cached lazyloaded"
                                     width="1920"
                                     height="600"
                                     src="./image/z4092993745728_54dfc62653706745c7f27e8e27bf88fb_f6e9cf8824764c55a474901efb057e39_master.webp"
                                     alt="" />
                            </picture>
                        </a>

                        <div class="container">
                            <div class="carousel-caption text-start"></div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <a class="d-block w-100" href="#">
                            <picture class="full-image">
                                <img class="dt-width-100 ls-is-cached lazyloaded"
                                     width="1920"
                                     height="600"
                                     src="./image/z4092993745728_54dfc62653706745c7f27e8e27bf88fb_f6e9cf8824764c55a474901efb057e39_master.webp"
                                     alt="" />
                            </picture>
                        </a>

                        <div class="container">
                            <div class="carousel-caption"></div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <a class="d-block w-100" href="#">
                            <picture class="full-image">
                                <img class="dt-width-100 ls-is-cached lazyloaded"
                                     width="1920"
                                     height="600"
                                     src="./image/z4092993745728_54dfc62653706745c7f27e8e27bf88fb_f6e9cf8824764c55a474901efb057e39_master.webp"
                                     alt="" />
                            </picture>
                        </a>

                        <div class="container">
                            <div class="carousel-caption text-end"></div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev"
                        type="button"
                        data-bs-target="#myCarousel"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true">
                    </span>
                    <span class="visually-hidden">Previous </span>
                </button>
                <button class="carousel-control-next"
                        type="button"
                        data-bs-target="#myCarousel"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true">
                    </span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</section>
<!-- end banner section -->
<!-- start breadcrumb section -->
<section id="breadcrumb">
    <div class="breadcrumb-cover">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <ol class="bread-cover">
                        <li class="bread-home" itemtype="./index.html">
                            <a asp-action="Index" asp-controller="home">
                                <span> Trang chủ </span>
                            </a>
                        </li>
                        <li class="bread-name">
                            <span class="product-name"> Tổ Yến </span>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end breadcrumb section -->
<!-- start content section -->

<section id="content" class="main-content">
    <div class="container">
        <div id="collection-body py-3">
            <div class="row">
                <div class="col-md-12 col-12">
                    <div class="row clt-flex-reverse">
                        <div class="col-12 col-md-12 clt-mb">
                            <div class="bg-white">
                                <div class="wrap-cnt-title">
                                    <div class="heading-clt">
                                        <div class="row">
                                            <div class="col-12 col-md-6 head-clt-title">
                                                <h1 class="title">Tổ Yến</h1>
                                            </div>
                                            <div class="col-6 col-md-6 head-clt-filter">
                                                <div class="filter-btn-wrap">
                                                    <a href="" class="filter-link">
                                                        <i class="bi bi-funnel"></i>
                                                        Bộ Lọc
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-12 clt-mb filter-wrap">
                            <div class="sidebar-box">
                                <div class="sidebar-module bg-white">
                                    <div class="sidebar-filter">
                                        <div class="layerted">
                                            <div class="sidebar-block block-content">
                                                <!-- Brand -->
                                                <div class="sidebar-group">
                                                    <div class="sidebar-subtitle">
                                                        <span> Thương Hiệu </span>
                                                        <span class="icon-control">
                                                            <i class="bi bi-chevron-down"></i>
                                                        </span>
                                                    </div>
                                                    <div class="sidebar-content">
                                                        <ul class="sidebar-ul">
                                                            <li class="sidebar-ul-li">
                                                                <span>CiCi Thượng Đỉnh Yến </span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <!-- /Brand -->
                                                <!-- Category -->
                                                <div class="sidebar-group">
                                                    <div class="sidebar-subtitle">
                                                        <span> Loại </span>
                                                        <span class="icon-control">
                                                            <i class="bi bi-chevron-down"></i>
                                                        </span>
                                                    </div>
                                                    <div class="sidebar-content">
                                                        <ul class="sidebar-ul">
                                                            <li class="sidebar-ul-li">
                                                                <span>Tổ Yến Tinh Chế </span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>Tổ Yến Thô</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <!-- /Category -->
                                                <!-- Price -->
                                                <div class="sidebar-group">
                                                    <div class="sidebar-subtitle">
                                                        <span> Giá Sản Phẩm </span>
                                                        <span class="icon-control">
                                                            <i class="bi bi-chevron-down"></i>
                                                        </span>
                                                    </div>
                                                    <div class="sidebar-content">
                                                        <ul class="sidebar-ul">
                                                            <li class="sidebar-ul-li">
                                                                <span>Dưới 500,000đ </span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>500,000đ - 1,000,000đ</span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>1,000,000đ - 2,000,000đ</span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>2,000,000đ - 5,000,000đ</span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>Trên 5,000,000đ</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <!-- /Price -->
                                                <!-- Service -->
                                                <div class="sidebar-group">
                                                    <div class="sidebar-subtitle">
                                                        <span> Dịch Vụ </span>
                                                        <span class="icon-control">
                                                            <i class="bi bi-chevron-down"></i>
                                                        </span>
                                                    </div>
                                                    <div class="sidebar-content">
                                                        <ul class="sidebar-ul">
                                                            <li class="sidebar-ul-li">
                                                                <span>Giao hàng 2h </span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>FreeShip</span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>Sale Up 50%</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <!-- /Service -->
                                                <!-- Delivery -->
                                                <div class="sidebar-group">
                                                    <div class="sidebar-subtitle">
                                                        <span> Giao Hàng </span>
                                                        <span class="icon-control">
                                                            <i class="bi bi-chevron-down"></i>
                                                        </span>
                                                    </div>
                                                    <div class="sidebar-content">
                                                        <ul class="sidebar-ul">
                                                            <li class="sidebar-ul-li">
                                                                <span>Giao Nội Địa </span>
                                                            </li>
                                                            <li class="sidebar-ul-li">
                                                                <span>Giao Quốc Tế</span>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <!-- /Delivery -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-12 mb-15">
                            <div class="bg-white">
                                <div class="d-block wrap-filter-custom">
                                    <label class="lb-filter">Sắp xếp theo:</label>
                                    <!-- <div class="filter-btn-wrapp">
                                      <a href="" class="filter-btn-2"
                                        ><i class="fal fa-filter"></i
                                        ><span>Sắp xếp theo</span></a
                                      >
                                    </div> -->
                                    <div class="filter-wrapp-2">
                                        @{
                                            string currentCategoryId = ViewBag.CurrentCategoryId?.ToString() ?? "";
                                            string currentSort = ViewBag.CurrentSortOrder as string ?? "";
                                        }

                                        <div class="option browse-tags customcol_sort">
                                            <a asp-action="Category"
                                               asp-controller="Product"
                                               asp-route-id="@currentCategoryId"
                                               asp-route-sortOrder="price-ascending"
                                               class="@(currentSort == "price-ascending" ? "active" : "")">
                                                <i></i> Giá: Tăng dần
                                            </a>

                                            <a asp-action="Category"
                                               asp-controller="Product"
                                               asp-route-id="@currentCategoryId"
                                               asp-route-sortOrder="price-descending"
                                               class="@(currentSort == "price-descending" ? "active" : "")">
                                                <i></i> Giá: Giảm dần
                                            </a>

                                            <a asp-action="Category"
                                               asp-controller="Product"
                                               asp-route-id="@currentCategoryId"
                                               asp-route-sortOrder="title-ascending"
                                               class="@(currentSort == "title-ascending" ? "active" : "")">
                                                <i></i> Tên: A-Z
                                            </a>

                                            <a asp-action="Category"
                                               asp-controller="Product"
                                               asp-route-id="@currentCategoryId"
                                               asp-route-sortOrder="title-descending"
                                               class="@(currentSort == "title-descending" ? "active" : "")">
                                                <i></i> Tên: Z-A
                                            </a>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-12">
                            <div class="bg-white">
                                <div class="content-product">
                                    <div class="content-product-list">
                                        <div class="row d-flex ct-product-list">
                                            @if (!Model.Any())
                                                {
                                                 <p>Không tìm thấy sản phẩm nào!</p>
                                                    }
                                                    else
                                               {
                                                @foreach (var item in Model.Where(p => p.Stock > 0))

                                            {
                                            <div class="col-6 col-md-4 col-lg-3">
                                                <div class="container-home-pdt-other">
                                                    <div class="cn-top-pdt-card">
                                                        <a class="cn-top-pdt-card-img"
                                                                   asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                                                    <img src="@Url.Content("~/media/products/" + item.ProductImages.FirstOrDefault(p => p.IsPrimary)?.ImageUrl)" alt="@item.Name" />


                                                            <div class="img-overlay"></div>
                                                        </a>
                                                    </div>
                                                    <div class="cn-top-pdt-text">
                                                        <h3 class="cn-top-pdt-h">
                                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="cn-top-pdt-name">
                                                                    @item.Name
                                                            </a>
                                                        </h3>
                                                        <div class="cn-top-pdt-star">
                                                            <a class="pdt-star">
                                                                <i class="bi bi-star"></i>
                                                                <i class="bi bi-star"></i>
                                                                <i class="bi bi-star"></i>
                                                                <i class="bi bi-star"></i>
                                                                <i class="bi bi-star"></i>
                                                            </a>
                                                        </div>
                                                        <div class="cn-top-pdt-price">
                                                            <p class="pdt-price">
                                                                    <span class="span-price"> @item.Price.ToString("N0") đ </span>
                                                            </p>
                                                        </div>
                                                        <div class="cn-top-pdt-buy">
                                                            <button class="cn-btn-buy btn btn mb-2 mb-md-0">
                                                                <span> Thêm vào giỏ </span>
                                                                <div class="icon cn-btn-icon d-flex align-items-center justify-content-center">
                                                                    <i class="bi bi-cart3"></i>
                                                                </div>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end content section -->